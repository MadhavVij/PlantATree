<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameLabel"
        android:layout_centerHorizontal="true"
        android:layout_column="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_row="0"
        android:background="#efefef"
        android:padding="3dp"
        android:text="Full Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameLabel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/dobLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:text="Birthday:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel"
        app:layout_constraintVertical_bias="0.047" />

    <EditText
        android:id="@+id/editDOB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_row="2"
        android:background="#efefef"
        android:ems="10"
        android:inputType="date"
        android:padding="3dp"
        android:text="01/01/2000"
        app:layout_constraintBaseline_toBaselineOf="@+id/dobLabel"
        app:layout_constraintLeft_toLeftOf="@+id/editName"
        app:layout_constraintRight_toRightOf="@+id/editName" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="6"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/dobLabel"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_row="6"
        android:background="#efefef"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="3dp"
        android:text="email@mavs.uta.edu"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/editDOB"
        app:layout_constraintRight_toRightOf="@+id/editDOB"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailLabel"
        android:layout_below="@+id/emailLabel"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="7"
        android:text="Phone:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/emailLabel"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_column="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_row="7"
        android:background="#efefef"
        android:inputType="phone"
        android:padding="3dp"
        android:text="000-000-0000"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/passwordLabel1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:layout_row="0"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintLeft_toLeftOf="@+id/phoneLabel"
        app:layout_constraintRight_toRightOf="@+id/phoneLabel"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabel"
        app:layout_constraintVertical_bias="0.039" />

    <EditText
        android:id="@+id/editPassword1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_row="0"
        android:background="#efefef"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="3dp"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordLabel1"
        app:layout_constraintLeft_toLeftOf="@+id/editPhone"
        app:layout_constraintRight_toRightOf="@+id/editPhone"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/passwordLabel2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:layout_row="1"
        android:text="Confirm Password:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/passwordLabel1"
        app:layout_constraintRight_toRightOf="@+id/passwordLabel1"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel1"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_row="1"
        android:background="#efefef"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="3dp"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordLabel2"
        app:layout_constraintLeft_toLeftOf="@+id/editPassword1"
        app:layout_constraintRight_toRightOf="@+id/editPassword1"
        tools:layout_editor_absoluteY="390dp" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="@string/btn_sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword2" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/btn_cancel"
        android:text="@string/btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel2"
        app:layout_constraintVertical_bias="0.502" />


</android.support.constraint.ConstraintLayout>